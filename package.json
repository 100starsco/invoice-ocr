{
  "name": "invoice-ocr",
  "version": "1.0.0",
  "private": true,
  "description": "Invoice OCR system with LINE integration",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter @invoice-ocr/web dev",
    "dev:admin": "pnpm --filter @invoice-ocr/admin dev",
    "dev:api": "pnpm --filter @invoice-ocr/api dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @invoice-ocr/web build",
    "build:admin": "pnpm --filter @invoice-ocr/admin build",
    "build:api": "pnpm --filter @invoice-ocr/api build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "env:setup": "cp .env.example .env && cp packages/web/.env.example packages/web/.env && cp packages/admin/.env.example packages/admin/.env"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.14.0"
}