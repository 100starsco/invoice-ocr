# OCR Service Development Environment
NODE_ENV=development

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ocr_results

# Service Authentication
SERVICE_API_KEY=dev-ocr-service-key-12345
WEBHOOK_SECRET=dev-webhook-secret-67890

# PaddleOCR Configuration
PADDLEOCR_LANG=th+en
PADDLEOCR_USE_ANGLE_CLS=true
PADDLEOCR_USE_SPACE_CHAR=true
PADDLEOCR_CONFIDENCE_THRESHOLD=0.3
PADDLEOCR_DEBUG_MODE=true
PADDLEOCR_DUAL_PASS=true
PADDLEOCR_DET_DB_THRESH=0.2
PADDLEOCR_DROP_SCORE=0.3

# Image Storage Configuration
IMAGE_STORAGE_PATH=/tmp/ocr_images
IMAGE_STORAGE_BASE_URL=http://localhost:8001/images

# RQ Dashboard Configuration
RQ_DASHBOARD_REDIS_URL=redis://localhost:6379/1
RQ_DASHBOARD_PORT=9181

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=development

# Development Features
ENABLE_CORS=true
ENABLE_DOCS=true
ENABLE_DEBUG_ENDPOINTS=true

# Queue Configuration
DEFAULT_JOB_TIMEOUT=300
PREPROCESSING_TIMEOUT=180
OCR_TIMEOUT=120
MAX_RETRY_ATTEMPTS=3

# Image Processing Configuration
MAX_IMAGE_WIDTH=2048
MAX_IMAGE_HEIGHT=2048
JPEG_QUALITY=95
ENABLE_FALLBACK_TO_ORIGINAL=true

# Performance Configuration
WORKER_CONCURRENCY=2
QUEUE_HIGH_WATER_MARK=100
QUEUE_LOW_WATER_MARK=20

# DigitalOcean Spaces Configuration (S3-compatible)
DO_SPACES_ENDPOINT=https://sgp1.digitaloceanspaces.com
DO_SPACES_ACCESS_KEY_ID=DO8012FLJYYHY2G3NK27
DO_SPACES_SECRET_ACCESS_KEY=nvMLy9HmSVPgMpTPS3oyBuyxg8t3cPOHfYXWsvPRAGU
DO_SPACES_BUCKET=iocr
DO_SPACES_REGION=sgp1
STORAGE_PROVIDER=spaces

# API Configuration
API_BASE_URL=http://localhost:3000
