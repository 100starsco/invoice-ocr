# OCR Service Environment Variables

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ocr_results
REDIS_URL=redis://localhost:6379

# PaddleOCR Configuration
# Language support options:
#   - th: Thai only
#   - en: English only
#   - th+en: Thai + English bilingual (default, recommended)
PADDLEOCR_LANG=th+en
PADDLEOCR_USE_ANGLE_CLS=true              # Detect and correct text orientation
PADDLEOCR_USE_SPACE_CHAR=true             # Preserve spaces between words
PADDLEOCR_CONFIDENCE_THRESHOLD=0.3        # Minimum confidence for text detection (0.1-1.0)
PADDLEOCR_DEBUG_MODE=false                # Enable detailed OCR logging
PADDLEOCR_DUAL_PASS=true                  # Enable dual-pass OCR (Chinese + English models for better Thai+English)
PADDLEOCR_DET_DB_THRESH=0.2               # Text detection threshold (lower = more sensitive, range: 0.1-0.5)
PADDLEOCR_DROP_SCORE=0.3                  # Drop OCR results below this confidence score

# RQ Configuration
RQ_DEFAULT_QUEUE=default
RQ_PREPROCESSING_QUEUE=preprocessing
RQ_OCR_QUEUE=ocr
RQ_RETRY_ATTEMPTS=3
RQ_JOB_TIMEOUT=300

# RQ Dashboard Configuration
RQ_DASHBOARD_REDIS_URL=redis://localhost:6379
RQ_DASHBOARD_PORT=9181

# Authentication Configuration
SERVICE_API_KEY=your-secure-service-api-key
WEBHOOK_SECRET=your-webhook-signature-secret

# Server Configuration
PORT=8001
NODE_ENV=development

# Webhook Configuration
WEBHOOK_TIMEOUT=30